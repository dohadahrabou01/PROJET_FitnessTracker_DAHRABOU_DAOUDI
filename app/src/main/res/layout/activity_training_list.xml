<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titre de la page -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes Entraînements"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <!-- RecyclerView pour afficher les entraînements -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Bouton pour ajouter un entraînement -->
    <Button
        android:id="@+id/goToFormButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter un entraînement"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>
    <!-- Bouton pour exporter les données -->
    <Button
        android:id="@+id/exportDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exporter les données"
        android:layout_marginTop="8dp"
        android:layout_gravity="center" />

</LinearLayout>
